	<definition name="applicationPackageForm" extends="titledPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/module/package/applicationPackageForm.jsp" cascade="true" />
	</definition>
	<definition name="createApplicationPackageForm" extends="applicationPackageForm" />
	<definition name="editApplicationPackageForm" extends="applicationPackageForm" />
	
	<!-- Application teams -->
	<definition name="applicationTeamList" extends="detailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/team/applicationTeamList.jsp" cascade="true" />
	</definition>
	
	<!-- Application SCM -->
	<definition name="applicationScm" extends="detailsPageTemplate">
		<put-attribute name="content" value="/WEB-INF/jsp/application/scm/applicationScm.jsp" cascade="true" />
	</definition>
	<definition name="applicationScmCollaborators" extends="detailsPageTemplate">
